@model Identity.UI.Models.IdentityVMs.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Register</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Create Your Account</h4>
                    <hr />
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            Identity kuralları gereği şifrede bir büyük harf, bir sayı ve bir özel karakter olmalıdır. Örnek: Password.1
                            <br />
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
   
                        <div class="form-group text-center">
                            <input type="submit" value="Register" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" asp-controller="Home">Back to Home</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
